@font-face {
  font-family: Lato Light;
  src: url('<%= asset_path('Lato-Lig.ttf') %>');
}

@font-face {
  font-family: Lato;
  src: url('<%= asset_path('Lato-Reg.ttf') %>');
}

body, h1, h2, h3, li, ul, p {
  margin: 0;
  padding: 0;
}

body {
  background: rgb(250,250,250);
  font-size: 16px;
  font-family: Lato Light, sans-serif, Helvetica, Arial;
  color: rgb(57,57,55);

  header, nav, main {

  }

  .width-wrapper {
    margin: 0 auto;
    padding-left: 50px;
    padding-right: 50px;
    width: 960px;
    overflow: visible
  }

  header {
    background: rgb(240,240,240);

    h1 {
      font-weight: normal;
      color: rgb(80,80,80);
      padding-top: 0.5em;
      padding-bottom: 0.5em;
      margin: 0 auto;
      font-size: 2.5em;
    }

  }

  nav {
    border-top: 4px solid rgb(200,200,200);
    background-color: rgb(210,210,210);
    line-height: 20px;

    ul {
      list-style-type: none;

      li {
        list-style: none;
        display: inline-block;

        a {
          padding: 0.5em 1em;
          display: inline-block;
          -webkit-transition: all 0.2s ease-in;
          text-decoration: none;
          color: rgb(80,80,80);
        }

        a:hover {
          background: rgb(200,200,200);
        }

      }

      li:first-child {
        margin-left: -1em;
      }

      li.sign-up-in {
        float: right;

        a {
          border-bottom: 4px solid rgb(170,170,170);
          margin-top: -4px;
        }

      }

    }

  } 

  main {
    padding-top: 2em;
    padding-bottom: 2em;

    .pages li {
      list-style: none;
    } 

    .dataset-show tr {
      text-align: right;
    }

    #solution-graph {
      overflow: visible;
    }

  }

}

.axis path, .axis line {
  fill: none;
  stroke: rgb(0,0,0);
  shape-rendering: crispEdges;
}

.solution-point {
  -webkit-transition: opacity 0.2s;
  cursor: pointer;
}

.solution-front-point {
  pointer-events: all;
  cursor: pointer;
  fill: transparent;
  -webkit-transition: fill 0.1s;
  z-index: 100;
}
.solution-front-point:hover {
  fill: rgb(100,100,100);
}

.solution-legend {
  cursor: pointer;
}

.selected {
  stroke-width: 2;
  stroke: rgb(6,69,173);
}

.line {
  fill: none;
  stroke: steelblue;
  stroke-width: 1.5px;
}

/* Life Styles */
.node circle {
  fill: #fff;
  stroke: steelblue;
  stroke-width: 1.5px;
}

.graph .node, .graph text, .graph-label {
  font-family: Lato Light;
}

.link {
  fill: none;
  stroke: #ccc;
  stroke-width: 1.5px;
}

/* Helper Classes */
.hidden {
  display: none;
}