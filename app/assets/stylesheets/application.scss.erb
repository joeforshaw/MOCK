@font-face {
  font-family: Lato;
  src: url('<%= asset_path('Lato-Lig.ttf') %>');
}

body, h1, h2, h3, li, ul {
  margin: 0;
  padding: 0;
}

body {
  background: rgb(250,250,250);
}

header {
  background: rgb(240,240,240);
  font-size: 2em;
}

header h1 {
  font-weight: normal;
  color: rgb(80,80,80);
  font-family: Lato;
  padding-top: 0.5em;
  padding-bottom: 0.5em;
  margin: 0 auto;
}

header h1, nav ul, main {
  width: 1200px;
  margin: 0 auto;
  padding-left: 50px;
  padding-right: 50px; 
}

nav {
  border-top: 4px solid rgb(200,200,200);
  background-color: rgb(210,210,210);
  font-size: 18px;
  line-height: 20px;
}

nav ul {
  list-style-type: none;
}

nav ul li {
  color: rgb(80,80,80);
  display: inline-block;
  list-style: none;
  cursor: pointer;
  padding: 0.5em 1em;
  -webkit-transition: all 0.2s ease-in;
}
nav ul li:hover {
  background: rgb(200,200,200);
}

body {
  font: 10px sans-serif;
  font-family: Lato, sans-serif, Helvetica, Arial;
  color: rgb(57,57,55);
}

main {
  /*background-color: rgb(236,237,238);*/
}

main .pages li {
  list-style: none;
}

.tab {
  display: none;
}

.page {
  display: inline-block;
}

.graph {
  text-align: center;
  padding: 20px 0;
}

.axis path, .axis line {
  fill: none;
  stroke: rgb(0,0,0);
  shape-rendering: crispEdges;
}

.dot {
  stroke: rgb(0,0,0);
}

.line {
  fill: none;
  stroke: steelblue;
  stroke-width: 1.5px;
}

/* Life Styles */
.node circle {
  fill: #fff;
  stroke: steelblue;
  stroke-width: 1.5px;
}

.node, text {
  font: 10px sans-serif;
}

.link {
  fill: none;
  stroke: #ccc;
  stroke-width: 1.5px;
}

.solution-front-label {
  font-family: Lato;
  fill: rgb(57,57,55);
  font-size: 1.5em;
}

/* Helper Classes */
.hidden {
  display: none;
}
.active-tab {
  display: block;
}