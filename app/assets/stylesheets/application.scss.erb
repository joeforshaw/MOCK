@font-face {
  font-family: Lato Light;
  src: url('<%= asset_path('Lato-Lig.ttf') %>');
}

@font-face {
  font-family: Lato;
  src: url('<%= asset_path('Lato-Reg.ttf') %>');
}

body, h1, h2, h3, li, ul, p {
  margin: 0;
  padding: 0;
}

.datasets-body .datasets-tab a,
.runs-body .runs-tab a,
.user-register-body .user-register-tab a,
.login-body .log-out-in-tab a {
  background-color: rgb(241,194,50);
  color: rgb(250,250,250);
  border-top: 4px solid rgb(231,184,40);
  display: block;
  margin-top: -4px;
}

.user-register-body .user-register-tab a,
.login-body .log-out-in-tab a {
  border-top: 4px solid rgb(211,164,20);
}

.runs-body .runs-tab a:hover,
.datasets-body .datasets-tab a:hover {
  background-color: rgb(251,204,60);
}

.graph-body main {

  .width-wrapper {
    width: 100%;
    padding-left: 0;
    padding-right: 0;
  }

  .graph-width-wrapper {
    margin: 0 auto;
    padding-left: 50px;
    padding-right: 50px;
    width: 960px;
    overflow: visible;
  }
}

body {
  background: rgb(250,250,250);
  font-size: 20px;
  font-family: Lato Light, sans-serif, Helvetica, Arial;
  color: rgb(57,57,55);

  a {
    text-decoration: none;
  }

  .orange {
    color: rgb(241,194,50);
    -webkit-transition: all 0.1s ease-in;
  }
  .orange:hover {
    color: rgb(251,204,60);
  }

  .orange-button, .purple-button {
    border: 0px solid;
    display: inline-block;
    color: rgb(250,250,250);
    padding: 0 1em;
    cursor: pointer;
    font-size: 20px;
    font-family: Lato Light;
    line-height: 2em;
    -webkit-transition: all 0.1s ease-in;
    text-align: center;
  }
  .orange-button {
    background-color: rgb(241,194,50);
    border-bottom: 4px solid rgb(231,184,40);
  }
  .orange-button:hover {
    background-color: rgb(251,204,60);
  }
  .purple-button {
    background-color: rgb(149,68,165);
    border-bottom: 4px solid rgb(129,48,145);
  }
  .purple-button:hover {
    background-color: rgb(169,88,185);
  }

  .width-wrapper {
    margin: 0 auto;
    padding-left: 50px;
    padding-right: 50px;
    width: 960px;
    overflow: visible;
  }

  header {
    background: rgb(240,240,240);

    h1 {
      font-weight: normal;
      padding-top: 0.5em;
      padding-bottom: 0.5em;
      margin: 0 auto;
      font-size: 2.5em;

      a {
        color: rgb(80,80,80);
        -webkit-transition: color 0.1s ease-in;
      }

      a:hover {
        color: rgb(231,184,40);
        // color: rgb(149,68,165);
      }

      span.subtitle {
        font-size: 0.8em;
        color: rgb(210,210,210);
        margin-left: 0.5em;
      }

    }

  }

  nav {
    border-top: 4px solid rgb(200,200,200);
    background-color: rgb(210,210,210);
    line-height: 20px;

    ul {
      list-style-type: none;

      li {
        list-style: none;
        display: inline-block;
        float: left;

        a {
          padding: 0.5em 0.5em;
          display: inline-block;
          -webkit-transition: background-color 0.1s ease-in;
          text-decoration: none;
          color: rgb(80,80,80);
        }

        a:hover {
          background: rgb(215,215,215);
        }

      }

      li:first-child {
        margin-left: -0.5em;
      }

      .log-out-in-tab, .user-register-tab {
        float: right;

        input {
          border: none;
          font-size: 20px;
          line-height: 20px;
          font-family: Lato-Light;
          padding: 0.5em 0.5em;
          border-top: 4px solid rgb(170,170,170);
          margin: -4px 0 0 0;
          background-color: rgb(210,210,210);
          color: rgb(80,80,80);
          cursor: pointer;
          -webkit-transition: color 0.1s;
          outline: 0;
        }
        input:hover {
          background-color: rgb(215,215,215);
        }

        a {
          border-top: 4px solid rgb(170,170,170);
          margin-top: -4px;
          margin-bottom: -4px;
        }

      }
    }

  }

  main {
    padding-top: 2em;
    padding-bottom: 2em;

    h2 {
      line-height: 1.5em;
    }

    .heading-wrapper {

      margin-bottom: 1em;

      h2 {
        float: left;
      }

    }

    .pages li {
      list-style: none;
    }

    .run-create {
      height: 500px;
      width: 960px;
    }

    #solution-graph {
      overflow: visible;
    }

  }

}

.axis path, .axis line {
  fill: none;
  stroke: rgb(200,200,200);
  stroke-width: 3px;
  shape-rendering: crispEdges;
}

.solution-point {
  -webkit-transition: opacity 0.2s;
  cursor: pointer;
}

.solution-legend {
  cursor: pointer;
}

.selected {
  stroke-width: 2;
  stroke: rgb(6,69,173);
}

.line {
  fill: none;
  stroke: steelblue;
  stroke-width: 1.5px;
}

.tick.major text {
  font-size: 0.8em;
}

.graph .node, .graph text, .graph-label {
  font-family: Lato Light;
  font-size: 0.8em;
}

.link {
  fill: none;
  stroke: #ccc;
  stroke-width: 1.5px;
}

/* Helper Classes */

.options-wrapper {

  background-color: rgb(240, 240, 240);
  margin: 1em 0;
  width: 100%;

  form {
    padding: 0.5em;
    text-align: center;

    ul {

      list-style: none;

      li {
        margin: 0 1em 0 0;
        display: inline-block;

        select, input {
          display: inline-block;
          vertical-align: 20%;
          margin: 0;
        }

        .number-field {
          width: 5em;
        }

        .radio,.number-field {
          margin-left: 0.5em;
          margin-right: 0.5em;
        }
      }
    }
  }
}

.form-wrapper {
  width: 400px;
  margin: 1em auto 0 auto;
  padding: 2em 2em 0 2em;
  background-color: rgb(240,240,240);
  // border-bottom: 4px solid rgb(210,210,210);

  .orange-button, .purple-button {
    width: 100%;
    padding: 0;
    margin: 0 0 2em 0;
  }

  .aux-button-left {
    float: left;
    display: inline-block;
    width: 45%;
  }

  .aux-button-right {
    float: right;
    display: inline-block;
    width: 45%;

  }

  ul {
    list-style-type: none;
  }

  h2 {
    margin-bottom: 1em;
  }

  form {

    #error_explanation {

    }

    input {
      border: 0px solid;
      margin-bottom: 1em;
    }

    .text-field-label {
      display: inline-block;
      margin-bottom: 0.5em;
    }

    .text-field-input {
      box-sizing: border-box;
      background-color: rgb(250,250,250);
      padding: 0.5em;
      line-height: 20px;
      font-size: 1em;
      font-family: Lato Light;
      width: 100%;
      margin-bottom: 2em;
    }

    .check-box-input {
      padding: 0.5em;
      font-size: 1em;
      line-height: 1em;
      margin: 0em 0 2em 0;
    }
    .check-box-label {
      font-size: 1em;
      line-height: 1em;
      margin-left: 1em;
    }

    .file-field-input {
      position: absolute;
      left: -9999px;
    }

    .file-field {
      width: 50%;
      display: inline-block;

      .file-field-label {
          cursor: pointer;
          background-color: rgb(241,194,50);
          color: rgb(250,250,250);
          padding: 0.5em 1em;
          margin-bottom: 2em;
          display: block;
          text-align: center;
          border-bottom: 4px solid rgb(231,184,40);
      }
    }

    .file-field-text {
      width: 50%;
      display: inline-block;
      margin-left: -4px;
      text-align: center;
    }
  }

  .submit-field {
    text-align: center;

    .submit-field-input {
      background-color: rgb(241,194,50);
      font-size: 1em;
      font-family: Lato Light;
      color: rgb(250,250,250);
      padding: 0.5em 1em;
      border-bottom: 4px solid rgb(231,184,40);
      cursor: pointer;
      width: 100%;
      margin: 0 0 2em 0;
    }

    .purple {
      background-color: rgb(149,68,165);
      border-bottom: 4px solid rgb(139,58,155);
    }

    .error {
      background-color: rgb(231,77,77);
      border-bottom: 4px solid rgb(221,67,67);
      width: 100%;
    }
  }
}

span.help {
  color: rgb(220,220,220);
  cursor: default;
  -webkit-transition: all 0.1s ease-in;
}
span.help:hover {
  color: rgb(200,200,200);
}

.hidden {
  display: none;
}

.clearfix:before,
.clearfix:after {
    content:"";
    display:table;
}

.clearfix:after {
    clear:both;
}

.slider-options-wrapper {
    display: none;
    position: relative;

    ul {
      list-style-type: none;

      li {
        width: 100%;
        background-color: rgb(149,68,165);
        border-bottom: solid 4px rgb(129,48,145);
        -webkit-transition: all 0.1s ease-in;

        a {
          margin: 0;
          color: rgb(250,250,250);
          display: inline-block;
          width: 100%;

          p {
            padding: 0.5em 1em;
            margin: 0;
          }

        }

        input {
          cursor: pointer;
          padding: 0.5em 1em;
          font-size: 1em;
          font-family: Lato Light;
          color: rgb(250,250,250);
          border-style: none;
          background: transparent;
          text-align: left;
          width: 100%;
          -webkit-transition: all 0.1s ease-in;
        }

        input:hover {
          background-color: rgb(160,90,185);
        }

        input:focus {
          outline: none;
        }

        ::-moz-focus-inner {
          border: 0;
        }

      }

      li:hover {
        background-color: rgb(160,90,185);
      }

      li:last-child {
        border-bottom: 0;
      }

    }
  }