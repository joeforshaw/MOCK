@font-face {
  font-family: Lato Light;
  src: url('<%= asset_path('Lato-Lig.ttf') %>');
}

@font-face {
  font-family: Lato;
  src: url('<%= asset_path('Lato-Reg.ttf') %>');
}

body, h1, h2, h3, li, ul, p {
  margin: 0;
  padding: 0;
}

.datasets-body .datasets-tab a,
.runs-body .runs-tab a,
.user-register-body .user-register-tab a,
.login-body .log-out-in-tab a {
  background-color: rgb(241,194,50);
  color: rgb(250,250,250);
  border-top: 4px solid rgb(231,184,40);
  display: block;
  margin-top: -4px;
}

.user-register-body .user-register-tab a,
.login-body .log-out-in-tab a {
  border-top: 4px solid rgb(211,164,20);
}

.runs-body .runs-tab a:hover,
.datasets-body .datasets-tab a:hover {
  background-color: rgb(251,204,60);
}

.graph-body main {

  .width-wrapper {
    width: 100%;
    padding-left: 0;
    padding-right: 0;
  }
  .heading-wrapper, p {
    margin: 0 auto;
    width: 960px;
    padding-left: 50px;
    padding-right: 50px;
  }
}

body {
  background: rgb(250,250,250);
  font-size: 20px;
  font-family: Lato Light, sans-serif, Helvetica, Arial;
  color: rgb(57,57,55);

  a {
    text-decoration: none;
  }

  .orange {
    color: rgb(241,194,50);
    -webkit-transition: all 0.1s ease-in;
  }
  .orange:hover {
    color: rgb(251,204,60);
  }

  .orange-button {
    border: 0px solid;
    display: inline-block;
    background-color: rgb(241,194,50);
    color: rgb(250,250,250);
    border-bottom: 4px solid rgb(231,184,40);
    padding: 0 1em;
    font-size: 20px;
    font-family: Lato Light;
    line-height: 2em;
    -webkit-transition: all 0.1s ease-in;
  }
  .orange-button:hover {
    background-color: rgb(251,204,60);
  }

  .width-wrapper {
    margin: 0 auto;
    padding-left: 50px;
    padding-right: 50px;
    width: 960px;
    overflow: visible
  }

  header {
    background: rgb(240,240,240);

    h1 {
      font-weight: normal;
      color: rgb(80,80,80);
      padding-top: 0.5em;
      padding-bottom: 0.5em;
      margin: 0 auto;
      font-size: 2.5em;
    }

  }

  nav {
    border-top: 4px solid rgb(200,200,200);
    background-color: rgb(210,210,210);
    line-height: 20px;

    ul {
      list-style-type: none;

      li {
        list-style: none;
        display: inline-block;
        float: left;

        a {
          padding: 0.5em 0.5em;
          display: inline-block;
          -webkit-transition: background-color 0.1s ease-in;
          text-decoration: none;
          color: rgb(80,80,80);
        }

        a:hover {
          background: rgb(215,215,215);
        }

      }

      li:first-child {
        margin-left: -0.5em;
      }

      .log-out-in-tab, .user-register-tab {
        float: right;

        a {
          border-top: 4px solid rgb(170,170,170);
          margin-top: -4px;
          margin-bottom: -4px;
        }

      }
    }

  } 

  main {
    padding-top: 2em;
    padding-bottom: 2em;

    h2 {
      line-height: 1.5em;
    }

    .heading-wrapper {

      margin-bottom: 1em;

      h2 {
        float: left;
      }

    }

    .delete-icon {
      float: right;
      margin-left: 1em;

      .delete-button {
        -webkit-transition: color 0.2s;
        cursor: pointer;
        padding: 0;
        margin: 0;
        font-size: 1em;
        border-style: none;
        background: transparent;
        color: rgb(170,170,170);
      }

      .delete-button:hover {
        color: rgb(80,80,80);
      }

    }

    .pages li {
      list-style: none;
    }

    .run-create {
      height: 500px;
      width: 960px;
    }

    #solution-graph {
      overflow: visible;
    }

  }

}

.axis path, .axis line {
  fill: none;
  stroke: rgb(200,200,200);
  stroke-width: 3px;
  shape-rendering: crispEdges;
}

.solution-point {
  -webkit-transition: opacity 0.2s;
  cursor: pointer;
}

.solution-front-point {
  pointer-events: all;
  cursor: pointer;
  fill: transparent;
  -webkit-transition: fill 0.1s;
  z-index: 100;
}
.solution-front-point:hover,
.last-solution {
  fill: rgb(149,68,165);
}

.solution-legend {
  cursor: pointer;
}

.selected {
  stroke-width: 2;
  stroke: rgb(6,69,173);
}

.line {
  fill: none;
  stroke: steelblue;
  stroke-width: 1.5px;
}

.tick.major text {
  font-size: 0.8em;
}

/* Life Styles */
.node circle {
  fill: #fff;
  stroke: steelblue;
  stroke-width: 1.5px;
}

.graph .node, .graph text, .graph-label {
  font-family: Lato Light;
  font-size: 0.8em;
}

.link {
  fill: none;
  stroke: #ccc;
  stroke-width: 1.5px;
}

/* Helper Classes */
.hidden {
  display: none;
}

.clearfix:before,
.clearfix:after {
    content:"";
    display:table;
}

.clearfix:after {
    clear:both;
}