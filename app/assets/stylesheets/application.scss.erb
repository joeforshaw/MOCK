@font-face {
  font-family: Lato Light;
  src: url('<%= asset_path('Lato-Lig.ttf') %>');
}

body, h1, h2, h3, li, ul {
  margin: 0;
  padding: 0;
}

body {
  background: rgb(250,250,250);
  font-size: 16px;
}

header {
  background: rgb(240,240,240);
}

header h1 {
  font-weight: normal;
  color: rgb(80,80,80);
  font-family: Lato Light;
  padding-top: 0.5em;
  padding-bottom: 0.5em;
  margin: 0 auto;
  font-size: 2.5em;
}

header, nav, main {
  margin: 0 auto;
  padding-left: 50px;
  padding-right: 50px;
  min-width: 800px;
}

nav {
  border-top: 4px solid rgb(200,200,200);
  background-color: rgb(210,210,210);
  line-height: 20px;
}

nav ul {
  list-style-type: none;
}

nav ul li {
  list-style: none;
  display: inline-block;

}
nav ul li.sign-up-in {
  float: right;
}
nav ul li.sign-up-in a {
  border-bottom: 4px solid rgb(170,170,170);
  margin-top: -4px;
}
nav ul li a {
  padding: 0.5em 1em;
  display: inline-block;
  -webkit-transition: all 0.2s ease-in;
  text-decoration: none;
  color: rgb(80,80,80);
}
nav ul li a:hover {
  background: rgb(200,200,200);
}
nav ul li:first-child {
  margin-left: -1em;
}

body {
  font-family: Lato Light, sans-serif, Helvetica, Arial;
  color: rgb(57,57,55);
}

main {
  padding-top: 2em;
  padding-bottom: 2em;
}

main .pages li {
  list-style: none;
}

.tab {
  display: none;
}

.page {
  display: inline-block;
}

.graph {
  text-align: center;
}

.axis path, .axis line {
  fill: none;
  stroke: rgb(0,0,0);
  shape-rendering: crispEdges;
}

.dot {
  stroke: rgb(0,0,0);
}

.line {
  fill: none;
  stroke: steelblue;
  stroke-width: 1.5px;
}

/* Life Styles */
.node circle {
  fill: #fff;
  stroke: steelblue;
  stroke-width: 1.5px;
}

.graph .node, .graph text, .graph-label {
  font-family: Lato Light;
}

.link {
  fill: none;
  stroke: #ccc;
  stroke-width: 1.5px;
}

/* Helper Classes */
.hidden {
  display: none;
}
.active-tab {
  display: block;
}