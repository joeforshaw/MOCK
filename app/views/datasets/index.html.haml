.content.dataset-index
  .heading-wrapper.clearfix
    %h2 Datasets
    .create-dataset= link_to "Upload a new dataset", new_dataset_path, :class => "orange-button"

  - if @datasets.nil? or @datasets.empty?
    %p
      No data uploaded.
      = link_to "To begin using MOCK, upload a new dataset", new_dataset_path
    %p
      Try
      = link_to "this dataset", "/sample/wine2.csv"
      to get started.
  - else
    %ul.datasets
      - @datasets.each do |dataset|
        %li.dataset-wrapper
          .delete-icon
            = button_to "X", destroy_dataset_path(dataset), :method => :delete, :class => "delete-button", :onclick => "return confirm('Are you sure you want to delete #{dataset.name}?')"
          .run-create-link
            = link_to "Run MOCK", new_run_path(:dataset => dataset.id), :dataset => dataset.id
          = link_to dataset.name, dataset